@page
@model RegisterModel
@{
    ViewData["Title"] = "Skapa ett nytt konto";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Email *</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Lösenord *</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Bekräfta lösenord *</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Skapa nytt konto</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Logga in</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
